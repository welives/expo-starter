{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@env": ["src/constants/env.ts"]
    }
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "android", "ios", "babel.config.js", "metro.config.js", ".eslintrc.js"]
}
