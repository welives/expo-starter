{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@env": ["src/core/constants/env.ts"]
    },
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "android", "ios", "babel.config.js", "metro.config.js", ".eslintrc.js"]
}
